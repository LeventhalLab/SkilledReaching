function [mcpIdx,pipIdx,digIdx,pawDorsumIdx] = findReachingPawParts(bodyparts,pawPref,varargin)


mcpSt
mcpIdx = zeros(4,1);
pipIdx = zeros(4,1);
digIdx = zeros(4,1);

for iDigit = 1 : 4
    % find mcp indices
    testString = sprintf('mcp%d',iDigit);
    mcpFind = strfind(bodyparts,testString);
    
    testString = sprintf('pip%d',iDigit);
    pipFind = strfind(bodyparts,testString);
    
    testString = sprintf('dig%d',iDigit);
    digFind = strfind(bodyparts,testString);
    
    for ii = 1 : length(bodyparts)
        
        if ~isempty(mcpFind{ii})
            mcpIdx(iDigit) = ii;
        end
        if ~isempty(pipFind{ii})
            pipIdx(iDigit) = ii;
        end
        if ~isempty(digFind{ii})
            digIdx(iDigit) = ii;
        end
    end
    
end

pawDorsumString = [pawPref 'pawdorsum'];
pawFind = strfind(bodyparts,pawDorsumString);

for ii = 1 : length(bodyparts)

    if ~isempty(pawFind{ii})
        pawDorsumIdx = ii;
    end

end