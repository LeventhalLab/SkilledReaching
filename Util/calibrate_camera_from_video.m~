function calibrate_camera_from_video(video_name)

square_size_mm = 10;    % checkerboard square size in mm

v = VideoReader(video_name);

im_size = [v.Height, v.Width];
num_frames = v.NumFrames;

images = zeros(im_size(1),im_size(2),num_frames);

worldPoints = generateCheckerboardPoints(cb_size, square_size_mm);

for i_frame = 1 : num_frames
    
    cur_frame = readFrame(v);
    images(:,:,
    
    [imPoints, cb_size] = detectCheckerboardPoints(cur_frame);
    
    figure;
    imshow(cur_frame)
    hold on
    scatter(imPoints(:,1), imPoints(:,2))
    
end