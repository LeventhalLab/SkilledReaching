function [ p ] = pawPixelProb( I,pawHist,nonPawHist,binEdges )
%UNTITLED3 Summary of this function goes here
%   Detailed explanation goes here

p=0;

bin_idx = zeros(size(I));
paw_p = zeros(size(I));
nonpaw_p = zeros(size(I));
for ii = 1 : size(I,3)
    cur_pawHist = pawHist(:,ii);
    cur_nonPawHist = nonPawHist(:,ii);
    temp_bin_idx = discretize(I(:,:,ii),binEdges(:,ii));
    temp_bin_idx(isnan(temp_bin_idx)) = temp_bin_idx(isnan(temp_bin_idx))
    paw_p(:,:,ii) = (cur_pawHist(bin_idx(:,:,ii)) - cur_nonPawHist(bin_idx(:,:,ii))) ./ cur_pawHist(bin_idx(:,:,ii));
end

